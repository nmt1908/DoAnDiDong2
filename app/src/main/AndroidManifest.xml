<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.NOTIFICATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/desktop"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodRocket"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LaucherActivity"
            android:exported="true"
            android:theme="@style/Theme.FoodRocket.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.admin.CategoryManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.UserManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.OrderManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.ProductManagementActivity"
            android:exported="false" />
        <activity
            android:name=".activities.user.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.RoleManagementActivity"
            android:exported="false" />
    </application>

</manifest>