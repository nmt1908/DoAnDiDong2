<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.FoodRocket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#113F23</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FoodRocket.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/logooo</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.FoodRocket.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#000</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="edTextField">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_primary_bg</item>
        <item name="android:elevation">5dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:shadowColor">#000</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="edTextFieldWithBorder" parent="edTextField">
        <item name="android:background">@drawable/edit_text_with_border_bg</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="spinner" parent="edTextField">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="btnAdd">
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_add_bg</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="btnAddRouned" parent="btnAdd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:drawableRight">@drawable/ic_add</item>
        <item name="android:background">@drawable/btn_add_bg_rounded</item>
    </style>

    <style name="textArea" parent="edTextField">
        <item name="android:gravity">top</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="containerWidthHeightMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="linearLayoutUserListContainer" parent="containerWidthHeightMatchParent">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linearLayoutListContainer" parent="containerWidthHeightMatchParent">
        <item name="android:paddingTop">@dimen/fragment_list_padding_top</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="cardViewRecyclerItem">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="imageRecyclerItem">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">2dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Theme.FoodRocket.Fullscreen" parent="Theme.FoodRocket">
        <item name="android:actionBarStyle">@style/Widget.Theme.FoodRocket.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.FoodRocket.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="textViewInputLabel">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>