<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/cardViewRecyclerItem">

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCategory"
            style="@style/imageRecyclerItem"
            app:srcCompat="@drawable/product_image_default" />

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Cơm chiên dương châu"
                android:textColor="@color/textTitlePrimary"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                tools:layout_editor_absoluteY="155dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:text="Tổng cộng:"
                    android:textColor="@color/textTitlePrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNumberOfProduct"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="40 (sp)"
                    android:textColor="@color/textBlack"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="-50dp"
            android:layout_gravity="end"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="@dimen/btnSize50"
                android:layout_height="@dimen/btnSize50"
                android:background="@drawable/btn_edit_bg"
                android:src="@drawable/ic_edit" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="@dimen/btnSize50"
                android:layout_height="@dimen/btnSize50"
                android:layout_marginTop="9dp"
                android:background="@drawable/btn_delete_bg"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

