<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="14"
    tools:context=".fragments.user.ProfileFragment">
    <!--    Button back top area-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|left"></LinearLayout>
    <!--Title area-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">
        <!--Title area-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="My Cart"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--    Money area-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!--        Text left-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Thành tiền"
            android:textColor="@color/green"
            android:textSize="18sp" />
        <!--Price right-->
        <TextView
            android:id="@+id/txt_price_paymetn_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="$125"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </LinearLayout>
    <!--Date-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="2">
        <!--        Date get product-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:text="Nhập số điện thoại"
            android:textColor="@color/green"
            android:textSize="18sp" />
        <!--        Edt to entry data-->
        <EditText
            android:id="@+id/edt_date_receive_item_payment_screen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@drawable/customize_edt_payment_screen"
            android:paddingLeft="16dp" />

    </LinearLayout>
    <!--Address area-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Dịa chỉ nhận hàng"
            android:textColor="@color/green"
            android:textSize="18sp" />
        <!--Edit text address receive item-->
        <EditText
            android:id="@+id/edt_address_receive_item_address_payment_screen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:background="@drawable/customize_edt_payment_screen"
            android:paddingLeft="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:weightSum="3">
        <!--        Note-->
    </LinearLayout>
    <!--Button-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_buy_payment_screen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/customize_btn_buy_payment_screen"
            android:paddingLeft="16dp"
            android:text="Mua Ngay"
            android:textColor="@color/white"
            android:textStyle="normal"
            app:backgroundTint="@null" />
    </LinearLayout>

</LinearLayout>